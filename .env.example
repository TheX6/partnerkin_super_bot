# Файл примера переменных окружения
# Скопируйте этот файл в .env и заполните своими данными

# Токен Telegram бота (получите в @BotFather)
TELEGRAM_TOKEN=ВАШ_УНИКАЛЬНЫЙ_ТОКЕН_ЗДЕСЬ

# Параметры подключения к PostgreSQL
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=partnerkino
DB_USER=postgres
DB_PASSWORD=ВАШ_НАДЕЖНЫЙ_ПАРОЛЬ

# Параметры администратора (ОБЯЗАТЕЛЬНО измените!)
ADMIN_PASSWORD=ВАШ_НАДЕЖНЫЙ_ПАРОЛЬ_АДМИНА

# Порт для веб-сервера (если планируете webhook)
PORT=3000

# Режим разработки
NODE_ENV=production

# Дополнительные параметры безопасности
SESSION_SECRET=ВАШ_СЕКРЕТНЫЙ_КЛЮЧ_ДЛЯ_СЕССИЙ
BCRYPT_ROUNDS=12